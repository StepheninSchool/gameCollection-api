generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Game {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  developer   String?
  publisher   String? // ? makes nullable or optional
  releaseDate String?
  image       String?
  completed   Boolean
  filename    String
  createdAt   DateTime @default(now())
}
